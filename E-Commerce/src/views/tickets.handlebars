<div class="container">
    <h2>Ordenes completadas</h2>
    {{#if tickets.length}}
        {{#each tickets}}
            <div class="card mb-3">
                <div class="card-body card-bg-color">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Numero: <strong>{{this.code}}</strong></h5>
                                <p class="card-text">Fecha compra: {{this.purchase_datetime}}</p>
                                <p class="card-text">Monto: {{this.amount}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>Â¡Visita nuestra pagina de productos para hacer tu primera compra!</p>
        <a href="../products">Listado de productos</a>
    {{/if}}
</div>